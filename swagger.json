          name: "name"
          description: "Tenant that the request is targeting"
          required: true
        - in: "path"
          type: "integer"
          name: "group_id"
          description: "Id of target owners group"
          required: true
        - in: "path"
          type: "string"
          name: "sub"
          required: true
