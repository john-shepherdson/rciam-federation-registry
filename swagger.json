swagger: "2.0"
info:
  description: "This is an Express server used to manage identity provider services. Users manage services by creating requests handled by administrators. You can find out more about the project on the [github page](https://github.com/rciam/rciam-federation-registry) or you can try it out live  [here](http://service-registry.aai-dev.grnet.gr/egi). "
  version: "1.2.1"
  title: "Federation Registry"
  termsOfService: "http://swagger.io/terms/"
  contact:
    email: "apiteam@swagger.io"
  license:
    name: "Rciam"
    url: "https://github.com/rciam"
host: "swagger.io"
basePath: "/v2"
tags:
- name: "Authentication"
  description: "Authentication routes"
- name: "Services"
  description: "Manage Services"
- name: "Petitions"
  description: "Manage Petition Requests"
- name: "User"
  description: "Operations about user"
- name: "Groups and Invitations"
  description: "Manage owners group"
- name: "AMS"
  description: "Commmunication with the Argo Messenging Service"
- name: "Agent"
  description: "Deditated endpoints for the ams-agent"
- name: "Deployer Agents"
  description: "Manage Tenant Deployer Agents"
- name: "Banner Alerts"
  description: "Banner notification alerts"
- name: "Service Tags"
  description: "Managing Service Rags"
schemes:
- "https"
paths:
  /tenants/{name}/tags:
    get:
      tags:
      - Service Tags
      summary: "Get all tags"
      description: "Get all available tags for a given tenant"
      parameters:
        - in: query
          name: tag
          type: string
          description: "Search string to filter tags result"
          required: false
        - in: path
          name: name
          type: string
          description: "Tenant that the request is targeting"
          required: true
      responses: 
        "200":
          description: "OK"
          schema: 
            type: "array"
            items:
              type: "string"
        "401": 
          description: "Unauthenticated request" 
        "500":
          description: "Error"
  /tenants/{name}/tags/services/{id}:
    get:
      tags:
      - Service Tags
      summary: "Get all tags of a service"
      description: "Get all available tags attached to a service"
      parameters:
        - in: path
          name: id
          type: integer
          description: "Id of the requested service"
          required: true
        - in: path
          name: name
          type: string
          description: "Tenant that the request is targeting"
          required: true
      responses: 
        "200":
          description: "OK"
          schema: 
            type: "array"
            items:
              type: "string"
        "401": 
          description: "Unauthenticated request" 
        "500":
          description: "Error"
    post:
      tags:
      - Service Tags
      summary: "Create new tags for a service"
      description: "Create new tags for a service"
      parameters:
        - in: path
          name: id
          type: integer
          description: "Id of the requested service"
          required: true
        - in: path
          name: name
          type: string
          description: "Tenant that the request is targeting"
          required: true
        - in: body
          name: body
          schema:
            type: "array"
            description: "Array of string tags"
            items: 
              type: "string"
      responses: 
        "200":
          description: "OK"
        "401": 
          description: "Unauthenticated request" 
        "500":
          description: "Error"
    delete:
      tags:
      - Service Tags
      summary: "Delete serivce tags"
      description: "Delete tags for a service"
      parameters:
        - in: path
          name: id
          type: integer
          description: "Id of the requested service"
          required: true
        - in: path
          name: name
          type: string
          description: "Tenant that the request is targeting"
          required: true
        - in: body
          name: body
          schema:
            type: "array"
            description: "Array of string tags"
            items: 
              type: "string"
      responses: 
        "200":
          description: "OK"
        "401": 
          description: "Unauthenticated request" 
        "500":
          description: "Error"
    
  /tenants/{name}/login:
    get:
      tags:
      - "Authentication"
      summary: "Redirects Users to Proxy"
      description: "This route redirects user to the tenants proxy authentication server where user is prompted to choose an identity provider and login."
      operationId: "login"
      parameters:
        - in: path
          name: name
          type: string
          description: "Tenant that the request is targeting"
          required: true
      responses:
        "301":
          description: "Redirects back to React App"
        "401":
          description: "Tenant is not available" 
        "500":
          description: "Error"
  /tokens/{code}:
    get:
      tags:
      - "Authentication"
      summary: "Exchange one time code with access token"
      description: "Used to get access token issued from the authentication proxy on login."
      operationId: "getToken"
      parameters:
        - in: "path"
          name: "code"
          type: "string"
          description: "One time code returned after login"
          required: true
      responses:
        "200":
          description: "OK"
          schema:
            type: "object"
            properties:
              token:
                type: "string"
                description: "Access token"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Error"
  /tenants/{name}/user:
    get:
      tags:
      - "User"
      summary: "Returns user and role info "
      description: ""
      operationId: "getUser"
      parameters:
        - in: path
          name: name
          type: string
          description: "Tenant that the request is targeting"
          required: true
      responses:
        "200":
          description: "OK"
          schema:
            $ref: "#/definitions/User"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Error"
      security:
      - access_tokenAuth: []
  /callback/{tenant_name}:
    get:
      tags:
      - "Authentication"
      summary: "Redirects user back to react app after login"
      description: "This route handles redirects from the authentication proxy following Authorization Code Flow, saves user to db links access_token to a one time code and then redirects to react app sending also the code."
      operationId: "callback"
      parameters:
        - in: path
          type: string
          name: tenant_name
          description: "Tenant that the request is targeting"
          required: true
      responses:
        "301":
          description: "Redirects back to React App"
        "500":
          description: "Error"
  /tenants/{name}/organizations:
    post:
      tags:
      - "Organizations"
      summary: "Add Organization"
      description: ""
      operationId: "postOrganization"
      consumes:
        - "application/json"
      produces:
        - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - in: "body"
        name: "body"
        description: "Organization object"
        required: true
        schema:
          $ref: "#/definitions/PostOrganization"
      responses:
        "200":
          description: "OK"
        "401":
          description: "Unauthenticated request"
        "422":
          description: "Invalid Data"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
    get:
      tags:
      - "Organizations"
      summary: "Get organizations"
      description: ""
      operationId: "getOrganizations"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - in: query 
        type: string
        name: search_string
        description: "Search string to filter organizations"
        required: false
      - in: query
        type: boolean
        name: ror
        description: "If true returns only orgnanization registered at ror.org"
      responses: 
        "200":
          description: "OK"
          schema:
            type: "array"
            items:
              type: "object"
              $ref: "#/definitions/PostOrganization"
        "401":
          description: "Unauthenticated request"
        "422":
          description: "Invalid Data"
        "500":
          description: "Internal Error"
      security:
        - access_tokenAuth: []
  /tenants/{name}/petitions:
    post:
      tags:
      - "Petitions"
      summary: "Create new petition"
      description: ""
      operationId: "addPetition"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - in: "body"
        name: "body"
        description: "Petition object describing the service configuration "
        required: true
        schema:
          $ref: "#/definitions/Petition"
      responses:
        "200":
          description: "OK"
        "401":
          description: "Unauthenticated request"
        "422":
          description: "Invalid Data"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/petitions/{id}:
    get:
      tags:
      - "Petitions"
      summary: "Get petition"
      description: ""
      operationId: "getPetition"
      consumes:
       - "application/json"
      produces:
        - "application/json"
      parameters:
        - in: path
          type: string
          name: name
          description: "Tenant that the request is targeting"
          required: true
        - in: "query"
          name: "type"
          required: false
          type: "string"
          description: "Type should be 'open' when asking for a pending petition"
        - name: "id"
          in: "path"
          description: "ID of petition to return"
          required: true
          type: "integer"
          format: "int64"
      responses:
        "200":
          description: "Succesfull"
          schema:
            $ref: "#/definitions/Petition"
        "401":
          description: "Unauthenticated request"
        "404":
          description: "Petition not found"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
    put:
      tags:
      - "Petitions"
      summary: "Edit petition"
      description: ""
      operationId: "updatePetition"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - name: "id"
        in: "path"
        description: "ID of petition to edit"
        required: true
        type: "integer"
        format: "int64"
      - in: "body"
        name: "body"
        description: "Petition object that needs to be added to the regisrtry may be empty if type is delete"
        required: false
        schema:
          $ref: "#/definitions/Petition"
      responses:
        "200":
          description: OK
        "401":
          description: "Unauthenticated request"
        "422":
          description: "Invalid Data"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
    delete:
      tags:
      - "Petitions"
      summary: "Delete petition"
      description: ""
      operationId: "deletePetition"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
        - in: path
          type: string
          name: name
          description: "Tenant that the request is targeting"
          required: true
        - name: "id"
          in: "path"
          description: "ID of petition to delete"
          required: true
          type: "integer"
          format: "int64"
      responses:
        "200":
          description: OK
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/notifications/broadcast/recipients:
    get:
      tags:
      - "Notifications"
      summary: "Get recipients"
      description: "Fetches all contacts that match the criteria provided"
      operationId: "getRecipients"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        required: true
        name: name
        description: "Tenant that the request is targeting"
      - in: query 
        name: contact_types
        type: array
        items:
          type: string
        description: "Types of contacts to get"
      - in: query
        name: environments
        type: array
        items:
          type: string
        description: "Target environments to get contacts from"
      responses:
        "200":
          description: "successful"
          schema:
            type: "array"
            items:
              type: "string"
            description: "Contact email addresses that match the criteria"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/notifications/owners:
    put:
      tags:
      - "Notifications"
      summary: "Send notifications to service owners"
      description: "Sends notifications to the owners of a service"
      operationId: "SendOwnerNotif"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        required: true
        name: name
        description: "Tenant that the request is targeting"
      - in: "body"
        name: "body"
        description: "Notification data"
        required: true
        schema:
          type: "object"
          properties:
            name:
              type: "string"
              description: "Name of the notification sender"
            email_address:
              type: "string"
              format: "email"
              description: "Email address of the notifications sender"
            email_subject:
              type: "string"
              description: "Subject of the notification"
            email_body:
              type: "string"
              description: "Notification Text, replaces (--* Reconfiguration Link *--) string with a button with a link to the reconfiguration page of the service/request"
            cc_emails:
              type: "array"
              items: 
                type: "string"
                format: "email"
              description: "Email addresses that will be added as CC to the notification email"
            recipients:
              type: "array"
              items: 
                type: "string"
                format: "email"
              description: "Email addresses that the notification will be sent"
      responses:
        "200":
          description: "successful"
          schema:
            type: "object"
            properties: 
              notified_users:
                type: "number"
                description: "Number of users the notification was sent to"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/notifications/broadcast:
    put:
      tags:
      - "Notifications"
      summary: "Send Notifications to service contacts"
      description: "Sends Notifications to the contacts of registered services"
      operationId: "sendNotif"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        required: true
        name: name
        description: "Tenant that the request is targeting"
      - in: "body"
        name: "body"
        description: "Notification data"
        required: true
        schema:
          type: "object"
          properties:
            name:
              type: "string"
              description: "Name of the notification sender"
            email_address:
              type: "string"
              format: "email"
              description: "Email address of the notifications sender"
            email_subject:
              type: "string"
              description: "Subject of the notification"
            email_body:
              type: "string"
              description: "Notification Text"
            contact_types:
              type: "array"
              items: 
                type: "string"
              description: "Types of Contacts that will recieve the notification"
            cc_emails:
              type: "array"
              items: 
                type: "string"
                format: "email"
              description: "Email addresses that will be added as CC to the notification email"
            environments:
              type: "array"
              items:
                type: "string"
              description: "Environments that will be targeted by the notification"
            notify_admins:
              type: "boolean"
              description: "Also add administrators as CC to the notification email"
            protocols:
              type: "array"
              items:
                type: "string"
              description: "Protocols of services that will be targeted by the notification"
      responses:
        "200":
          description: "successful"
          schema:
            type: "object"
            properties: 
              notified_users:
                type: "number"
                description: "Number of users the notification was sent to"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/notifications/outdated:
    put:
      tags:
      - "Notifications"
      summary: "Send Outdated Alert Notifications"
      description: "Sends Notifications to the owners of outdated services"
      operationId: "sendOutdatedNotif"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        required: true
        name: name
        description: "Tenant that the request is targeting"
      - in: "body"
        name: "body"
        description: "Notification data"
        required: true
        schema:
          type: "object"
          properties:
            integration_environment:
              type: "string"
              description: "Integration environment to send outdated alert notifications"
      responses:
        "200":
          description: "successful"
          schema:
            type: "object"
            properties: 
              user_count:
                type: "number"
                description: "Number of users the notification was sent to"
              service_count:
                type: "number"
                description: "Number of outdated service in integration envronment provided as parameter"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/banner_alert:
    get:
      tags:
      - "Banner Alerts"
      summary: "Get all banner alerts for the given tenant"
      description: "Get all banner alerts for the given tenant"
      operationId: "getBannerAlerts"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - name: "active"
        in: "query"
        description: "If true returns only active alerts"
        required: false
        type: "boolean"
      responses:
        "200":
          description: "successful"
          schema:
            type: "array"
            items:
              type: "object"
              $ref: "#/definitions/BannerAlert"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - admin_key: []
    post: 
      tags:
      - "Banner Alerts"
      summary: "Create a new banner alert"
      description: "Create a new banner alert"
      operationId: "createBannerAlerts"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - in: "body"
        name: "body"
        schema:     
          $ref: "#/definitions/BannerAlert"
      responses:
        "200":
          description: "successful"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - admin_key: []
  /tenants/{name}/banner_alert/{id}:
    put:
      tags:
      - "Banner Alerts"
      summary: "Update a banner alert"
      description: "Update a banner alert"
      operationId: "UpdateBannerAlerts"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - in: path
        name: id
        type: "integer"
        format: "int64"
        required: true
        description: "Id of Banner Alert to update"
      - in: "body"
        name: "body"
        schema:     
          $ref: "#/definitions/BannerAlert"
      responses:
        "200":
          description: "successful"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - admin_key: []
    delete:
      tags:
      - "Banner Alerts"
      summary: "Delete a banner alert"
      description: "Delete a banner alert"
      operationId: "DeleteBannerAlerts"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - in: path
        name: id
        type: "integer"
        format: "int64"
        required: true
        description: "Id of Banner Alert to delete"
      responses:
        "200":
          description: "successful"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - admin_key: []
  /tenants/{name}/services/{id}:
    get:
      tags:
      - "Services"
      summary: "Get service by id"
      description: "Gets service by id"
      operationId: "getService"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - name: "id"
        in: "path"
        description: "ID of service to return"
        required: true
        type: "integer"
        format: "int64"
      responses:
        "200":
          description: "successful"
          schema:
            type: "object"
            properties:
              service: 
                $ref: "#/definitions/Service"
              owned:
                type: "boolean"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/petitions/{id}/review:
    put:
      tags:
      - "Petitions"
      summary: "Review Petition"
      description: ""
      operationId: "review"
      produces:
      - "application/json"
      parameters:
      - in: path
        type: string
        name: name
        description: "Tenant that the request is targeting"
        required: true
      - name: "id"
        in: "path"
        description: "ID of petition to review"
        required: true
        type: "integer"
        format: "int64"
      - name: "type"
        in: "query"
        type: "string"
        enum:
        - "approve"
        - "reject"
        - "changes"
        - "request_review"
      responses:
        "200":
          description: OK
        "204":
          description: "Petition not found"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/services/list:
    get:
      tags:
      - "Services"
      summary: "Get all available services"
      description: "Returns paginated service information for creating a service list"
      operationId: "getServiceList"
      produces:
      - "application/json"
      parameters:
        - in: path
          type: string
          name: name
          description: "Tenant that the request is targeting"
          required: true
        - in: query
          type: integer
          name: page
          description: "The page number of the respone"
        - in: query
          type: integer
          name: limit
          description: "The page size determining the number of services contained in each page of the response"
        - in: query
          type: boolean
          name: owned
          description: "If true returns only services and petitions owned by requesting user"
        - in: query
          type: boolean
          name: pending
          description: "If true returns only services that have open petitions"
        - in: query
          type: string
          name: search_string
          description: "Returns only services and petitions that contain the provided string"
        # - in: query
        #   type: string
        #   name: protocol
        #   description: "Returns only services of the selected protocol"
        - in: query
          type: string
          name: env
          description: "Returns only services deployed in selected integration environment"
        - in: query
          type: string
          name: request_review
          description: "Returns only services that are in review requested state"
        - in: query
          type: string
          name: outdated
          description: "Returns only services that have invalid configuration"
        - in: query
          type: string
          name: protocol
          description: "Returns only services of the given protocol (oidc,saml)"
        - in: query
          type: string
          enum:
          - 'pending'
          - 'changes'
          - 'request_review'
          name: pending_sub
          description: "Sub filter for services with pending requests based on the review state of the request"
        - in: query
          type: boolean
          name: error
          description: "Returns only services that have a deployment error"
        - in: query
          type: string
          name: 'tag'
          description: "Filters results based on tags, supports multiple comma seperated values"
      responses:
        "200":
          description: "OK"
          schema:
            type: "array"
            items:
              type: "object"
              $ref: "#/definitions/Services"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
  /tenants/{name}/services:
    get:
      tags:
      - "Services"
      summary: "Get all available services"
      description: "Returns all available services, some properties are returned only for authorized requests"
      operationId: "getServices"
      produces:
      - "application/json"
      parameters:
        - in: path
          type: string
          name: name
          description: "Tenant that the request is targeting"
          required: true
      responses:
        "200":
          description: "OK"
          schema:
            type: "array"
            items:
              type: "object"
              $ref: "#/definitions/Service"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
      - access_tokenAuth: []
    post:
      tags:
      - "Services"
      summary: "Add services"
      description: "Endpoint used to directly add services to federation registry. Should be used only when necessary and not as an alternative way to add services."
      operationId: "addServices"
      parameters:
        - in: path
