        "204":
          description: "No group found"
        "401":
          description: "Unauthenticated request"
        "500":
          description: "Internal Error"
      security:
        - access_tokenAuth: []
  /tenants/{name}/groups/{group_id}/members/{sub}:
    delete:
      tags:
      - "Groups and Invitations"
